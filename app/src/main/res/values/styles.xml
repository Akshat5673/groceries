<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <listItem name="colorPrimary">@color/colorPrimary</listItem>
        <listItem name="colorPrimaryDark">@color/colorPrimaryDark</listItem>
        <listItem name="colorAccent">@color/colorAccent</listItem>
    </style>

    <style name="AppTheme.NoActionBar">
        <listItem name="windowActionBar">false</listItem>
        <listItem name="windowNoTitle">true</listItem>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
